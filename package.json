{
  "name": "mf-selection-app",
  "version": "1.0.0",
  "description": "Mutual Fund Selection Web Application with Express, MySQL and React",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon src/server.js",
    "dev:client": "npm --prefix client run dev",
    "build:client": "npm --prefix client run build",
    "install:all": "npm install && npm --prefix client install",
    "db:inspect": "node scripts/inspect-db.js",
    "db:cleanup": "node scripts/cleanup-db.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=tests/unit",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=tests/integration",
    "lint": "eslint ."
  },
  "keywords": [
    "mutual-fund",
    "mfapi",
    "express",
    "sqlite",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@eslint/js": "^9.39.2",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js"
    ]
  }
}